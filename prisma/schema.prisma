generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Pokemon {
  id             String   @id @default(auto()) @map("_id") @db.ObjectId
  dexNumber      Int
  formId         String   @unique
  types          String[]
  name           String
  region         String
  species        String
  art            String
  hp             Int
  speed          Int
  attack         Int
  defense        Int
  specialAttack  Int
  specialDefense Int
  abilities      String[]
  evYield        Json
  entry          String
  evolvesFrom    Json
  evolvesTo      Json
  height         String
  weight         String
  variations     Json

  @@map("pokemons")
}

